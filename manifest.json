{
  "manifest_version": 3,
  "name": "CarPriceFinder AI",
  "version": "2.0",
  "description": "Intelligence artificielle pour l'estimation des prix de voitures avec d√©tection d'options premium",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://api.carlytics.fr/*",
    "http://localhost:9001/*",
    "http://127.0.0.1:9001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CarPriceFinder AI Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://www.auto1.com/*"],
      "js": ["inject.js", "content-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["intercept.js"],
      "matches": ["https://www.auto1.com/*"]
    }
  ]
}
